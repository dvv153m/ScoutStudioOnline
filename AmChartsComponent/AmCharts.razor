    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        //if (firstRender)
        if(ChartControl.CountPoints > 9)
        {
            await AmChartsJsInterop.Init(JsRuntime, ChartControl);            
            //await ChartInterop.Init(JsRuntime, Charts);            
        }
    }

}
