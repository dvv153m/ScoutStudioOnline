@code {
    ChartControl _chartControl = null;
    private int currentCountPoinst = 10000;

    protected override void OnInitialized()
    {
        _chartControl = new ChartControl(5, 2);        
    }

    private void Apply()
    {        
        _chartControl = new ChartControl(currentCountPoinst, 2);
    }

}
