@page "/chart"


<h3>Chart v1 - 2 charts</h3>
<label>Кол-во точек:</label>
<input type="number" id="tentacles" name="tentacles" @bind="currentCountPoinst" min="10" max="1000000">
<button class="btn btn-primary" @onclick="Apply">Применить</button>

<AmCharts Class="chartdiv" ChartControl="_chartControl"></AmCharts>



@code {
    ChartControl _chartControl = null;
    private int currentCountPoinst = 10000;

    protected override void OnInitialized()
    {
        _chartControl = new ChartControl();        
    }

    private void Apply()
    {        
        _chartControl = new ChartControl(currentCountPoinst, 2);
    }

}
