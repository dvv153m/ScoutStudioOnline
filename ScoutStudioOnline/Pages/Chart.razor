@page "/chart"

<h3>Chart v1</h3>
<p>Кол-во точек:</p>
<input type="number" id="tentacles" name="tentacles" @bind="currentCountPoinst"
       min="10" max="1000000">
<button class="btn btn-primary" @onclick="Apply">Применить</button>

<AmChartsComponent.AmCharts Class="chartdiv" ChartControl="_chartControl"></AmChartsComponent.AmCharts>

